<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:background="#6A127A"
    tools:context=".Main2Activity">
    <RelativeLayout
        android:id="@+id/MainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/fab1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/unnamed"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"/>

                    <ImageView
                        android:onClick="mora"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/muctien2" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/labeltiendangco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:text="Số Tiền Đang Có: "/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txvTienDangCo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F9A825"
                        android:textSize="17dp"
                        android:text="0 VND"
                        android:layout_toRightOf="@+id/labeltiendangco"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txvCauHoi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:background="@drawable/bg_btn"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp">

                        <TextView
                            android:layout_width="50dp"
                            android:background="@drawable/btn_abcd"
                            android:layout_height="match_parent"
                            android:text="A"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txvCauTL1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_choose_dapan"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp">

                        <TextView
                            android:layout_width="50dp"
                            android:background="@drawable/btn_abcd"
                            android:layout_height="match_parent"
                            android:text="B"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txvCauTL2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_choose_dapan"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp">

                        <TextView
                            android:layout_width="50dp"
                            android:background="@drawable/btn_abcd"
                            android:layout_height="match_parent"
                            android:text="C"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txvCauTL3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_choose_dapan"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp">

                        <TextView
                            android:layout_width="50dp"
                            android:background="@drawable/btn_abcd"
                            android:layout_height="match_parent"
                            android:text="D"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txvCauTL4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_choose_dapan"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ThuaGame"
        android:background="@drawable/bg_btn">
        <LinearLayout
            android:background="@drawable/khungvang"
            android:gravity="center"
            android:padding="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/txtLuuDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="sssssss"
                />
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/txtThuaGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="sssssss" />
            <EditText
                style="@style/MyEditTextStyle"
                android:id="@+id/edtTenNguoiChoi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="Nhập vào tên..."
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnLuuDiem"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Lưu Điểm"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_btn_choose"/>
                <Button
                    android:id="@+id/btnTrangChu"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Trang Chủ"
                    android:textColor="#ffffff"
                    android:background="@drawable/bg_btn_choose"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/navigation"
        android:background="#6A127A"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="start"
       >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lsvTienThuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:onClick="trogiupkhangiatruongquay"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#21D82A"
            app:maxImageSize="60dp"
            android:src="@drawable/hoiykienkhangia" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:onClick="trogiup5050"
            app:maxImageSize="60dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="145dp"
            android:src="@drawable/source"
            android:backgroundTint="#21D82A"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:onClick="helpdocauhoi"
            android:id="@+id/fab4"
            android:visibility="invisible"
            app:maxImageSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/ic_cached_black_24dp"
            android:backgroundTint="#21D82A"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>